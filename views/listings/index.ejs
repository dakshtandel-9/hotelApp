<% layout("/layouts/boilerplate") %>

    <body>
        <h2>All Listings</h2>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let Listing of allListings){ %>
                <a href="/listing/<%= Listing._id %>" class="no_underline">
                    <div class="card">
                        <img src="<%= Listing.image.url %>" class="card-img-top" alt="...">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= Listing.title %>
                            </h5>
                            <p class="card-text">
                                &#x20B9 <%= Listing.price ? Listing.price.toLocaleString('en-IN') : 'N/A' %>/night
                            </p>
                            

                        </div>
                    </div>
                </a>
            <% } %>
        </div>


    </body>