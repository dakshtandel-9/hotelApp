<% layout("/layouts/boilerplate") %>
<body>
    <h2>Create New Listing</h2>
    <form method="post" action="/listing">
        <input type="listing[text]" name="listing[title]" placeholder="enter title">
        <br><br>  
        <textarea name="listing[description]" placeholder="enter description"></textarea>
        <br><br>
        <input type="text" name="listing[image][url]" placeholder="paste url/link of image">
        <br><br>
        <input type="number" name="listing[price]" placeholder="enter price">
        <br><br>
        <input type="text" name="listing[location]" placeholder="enter location">
        <br><br>
        <input type="text" name="listing[country]" placeholder="enter country">
        <br><br>
        <button>Add</button>
    </form>
</body>
