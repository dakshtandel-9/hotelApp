<% layout("/layouts/boilerplate") %>

    <body>
        <h2>Create New Listing</h2>

        <form method="post" action="/listing" class="needs-validation" novalidate>
            <div class="row">
                <div class="col-8 offset-2">
                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label><br>
                        <input type="text" class="form-control" name="listing[title]" placeholder="enter title"
                            required>
                            <div class="invalid-feedback">
                                Please choose a username.
                              </div>
                    </div>
                    <div class="mb-3"><label for="description">Description</label><br>
                        <textarea name="listing[description]" placeholder="enter description" required
                            class="form-control"></textarea>
                    </div>
                    <div class="mb-3"><label for="image" class="form-lable">Image</label><br>
                        <input type="text" class="form-control" name="listing[image][url]"
                            placeholder="paste url/link of image" required>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4"><label for="price" class="form-lable">Price</label><br>
                            <input type="number" class="form-control" name="listing[price]" placeholder="enter price"
                                required>
                        </div>
                        <div class="mb-3 col-md-8"><label for="location" class="form-lable">Location</label><br>
                            <input type="text" class="form-control" name="listing[location]"
                                placeholder="enter location" required>
                        </div>
                    </div>
                    <div class="mb-3"><label for="country" class="form-lable">Country</label><br>
                        <input type="text" class="form-control" name="listing[country]" placeholder="enter country"
                            required>
                    </div>
                    <button class="btn btn-dark">Add</button>
                </div>
            </div>
        </form>
    </body>