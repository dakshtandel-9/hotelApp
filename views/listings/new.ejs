<% layout("/layouts/boilerplate") %>
<body>
    <h2>Create New Listing</h2>
    <form method="post" action="/listing">
        <input type="listing[text]" name="listing[title]" placeholder="enter title" required>
        <br><br>  
        <textarea name="listing[description]" placeholder="enter description" required></textarea>
        <br><br>
        <input type="text" name="listing[image][url]" placeholder="paste url/link of image" required>
        <br><br>
        <input type="number" name="listing[price]" placeholder="enter price" required>
        <br><br>
        <input type="text" name="listing[location]" placeholder="enter location" required>
        <br><br>
        <input type="text" name="listing[country]" placeholder="enter country" required>
        <br><br>
        <button>Add</button>
    </form>
</body>
